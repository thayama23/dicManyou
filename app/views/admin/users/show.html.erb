<h2>ユーザー情報一覧</h2>

<p><%= @user.name %>のページ</p>
<p>メールアドレス: <%= @user.email %></p>
<p>管理者権限: <%= @user.admin %></p>

<br>
<table>
  <thead>
    <tr>
      <th>Task name</th>
      <th>Task detail</th>
      <th>Task deadline</th>
      <th>Task progress</th>
      <th>Task priority</th>
    </tr>
  </thead>

  <tbody>   
    <% @tasks.each do |task| %>
      <tr class = "task_row">
        
        <td><%= task.name %></td>
        <td><%= task.detail %></td>
        <td><%= task.deadline %></td>
        <td><%= task.progress %></td>
        <td><%= task.priority %></td>
      </tr>
    <% end %>
  </tbody>
</table>

