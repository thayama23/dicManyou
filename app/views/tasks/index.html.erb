<p id="notice"><%= notice %></p>

<h1><%= t('Task.title') %> </h1>

<%= link_to 'New Task', new_task_path %>
<br>
<%= form_with(model: @tasks, url: tasks_path, method: :get, local: true) do |form| %>
  <div class="field">
    <%= form.label t("activerecord.attributes.task.name") %>
    <%= form.text_field :name, value: "" %>
  </div>
  <div class="task_title">
    <%= form.label t("activerecord.attributes.task.progress") %>
    <%= form.select :progress, [["未着手", 0 ], ["着手中", 1 ], ["完了", 2 ]] ,{include_blank: true}%>
  </div>
   <%= form.submit "検索" %>
<% end %>

<br>

<table>
  <thead>
    <tr>
      <th>Task name</th>
      <th>Task detail</th>
      <th>Task deadline</th>
      <th>Task progress</th>
      <th>Task priority</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>   
    <% @tasks.each do |task| %>
      <tr class = "task_row">
        <td><%= task.name %></td>
        <td><%= task.detail %></td>
        <td><%= task.deadline %></td>
        <td><%= task.progress %></td>
        <td><%= task.priority %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class = "sorting_and_paginate">
  <br>
  <%= link_to "終了期限でソートする", tasks_path(sort_expired: "true") %>
  <br>
  <%= link_to "優先度でソートする", tasks_path(sort_priority: "true") %>

  <br>
  <%= paginate @tasks %>
</div>