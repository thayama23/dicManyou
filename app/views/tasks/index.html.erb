<p id="notice"><%= notice %></p>

<h1><%= t('Task.title') %> </h1>

<table>
  <thead>
    <tr>
      <th>Task name</th>
      <th>Task detail</th>
      <th>Task deadline</th>
      <th>Task progress</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>   
    <% @tasks.each do |task| %>
      <tr class = "task_row">
        <td><%= task.name %></td>
        <td><%= task.detail %></td>
        <td><%= task.deadline %></td>
        <td><%= task.progress %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to "終了期限でソートする", tasks_path(sort_expired: "true") %>
<br>
<%= link_to 'New Task', new_task_path %>
